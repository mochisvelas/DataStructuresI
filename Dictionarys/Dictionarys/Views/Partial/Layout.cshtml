@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/scripts")
</head>
<body>
    <header>
        <div class="container">
            <div class="twelve columns">
                <nav class="u-pull-right">
                    <ul>
                        <li class="menuopts">@Html.ActionLink("Cargar datos", "LoadData", "Album")</li>
                        <li>@Html.ActionLink("Buscar estampas", "MissingStamps", "Album")</li>
                        <li>@Html.ActionLink("Intercambiar estampas", "ModInfo", "Album")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    @RenderBody()
    @RenderSection("scripts", required: false)
</body>
</html>
